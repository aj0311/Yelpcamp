<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card margin">
                <img class="img-thumbnail img-responsive" src="<%=campground.image%>">
                <div class="caption-full padding">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted By <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser &&campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning btn-xs" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="form-delete-inline" action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>    
                </div>
            </div>
            <div class="card">
                <div class="text-right">
                    <div class="card-header">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a new comment</a>
                    </div>
                </div>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row padding">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                Edit
                            </a>
                            <form id="form-delete-inline" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=delete" method="post">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>